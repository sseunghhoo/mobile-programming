package com.example.votingsystem;

import android.os.Bundle;
import android.widget.ImageView;
import android.widget.TextView;
import androidx.appcompat.app.AppCompatActivity;

public class ResultActivity extends AppCompatActivity {
    private ImageView imageView;
    private TextView titleTextView;

    // 이미지 파일 ID 배열
    Integer imageFileId[] = {
        R.drawable.pic1,
        R.drawable.pic2,
        R.drawable.pic3,
        R.drawable.pic4,
        R.drawable.pic5,
        R.drawable.pic6,
        R.drawable.pic7,
        R.drawable.pic8,
        R.drawable.pic9
    };

    // 각 그림에 대한 투표 수
    int[] votes = {5, 3, 2, 8, 6, 7, 4, 9, 10};

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.result); // result.xml 레이아웃 파일

        imageView = findViewById(R.id.imageView);
        titleTextView = findViewById(R.id.titleTextView);

        // 가장 높은 투표 수를 가진 그림 찾기
        int maxVotesIndex = findMaxVotesIndex(votes);

        // 해당 그림과 제목 표시
        imageView.setImageResource(imageFileId[maxVotesIndex]);
        titleTextView.setText("가장 많은 투표를 받은 그림"); // 제목 수정 가능
    }

    // 최대 투표 수를 가진 인덱스를 찾는 메서드
    private int findMaxVotesIndex(int[] votes) {
        int maxIndex = 0;
        for (int i = 1; i < votes.length; i++) {
            if (votes[i] > votes[maxIndex]) {
                maxIndex = i;
            }
        }
        return maxIndex;
    }
}
